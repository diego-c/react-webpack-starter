{
  "name": "react-webpack-starter",
  "version": "1.0.0",
  "description": "A quick boilerplate for react projects set up with webpack",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --config webpack.dev.js --color --progress --hot --open",
    "build": "rm -rf dist/ && webpack -p --config webpack.prod.js --color --progress",
    "test": "jest --no-cache --watchAll"
  },
  "transform": {
    "^.+\\.jsx?$": "babel-jest",
    "^.+\\.css$": "custom-transformer"
  },
  "jest": {
    "globals": {
      "NODE_ENV": "test"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.css$": "identity-obj-proxy"
    },
    "transform": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/transformer.js"
    }
  },
  "keywords": [
    "react",
    "webpack",
    "boilerplate"
  ],
  "author": "diego-c",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^8.0.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.4.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "css-hot-loader": "^1.3.7",
    "css-loader": "^0.28.9",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^2.30.1",
    "identity-obj-proxy": "^3.0.0",
    "image-webpack-loader": "^4.1.0",
    "jest": "^22.4.2",
    "postcss-loader": "^2.1.1",
    "react-test-renderer": "^16.2.0",
    "style-loader": "^0.20.1",
    "svg-url-loader": "^2.3.1",
    "uglifyjs-webpack-plugin": "^1.2.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1",
    "webpack-merge": "^4.1.1"
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  }
}
